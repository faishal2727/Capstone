<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_margin="4dp"    android:elevation="10dp"    app:cardCornerRadius="10dp"    app:cardElevation="10dp">    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_margin="10dp">        <de.hdodenhof.circleimageview.CircleImageView            android:id="@+id/ivAvatarUser"            android:layout_width="70dp"            android:layout_height="70dp"            android:src="@drawable/sample_event"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent" />        <TextView            android:id="@+id/tvUsernameComment"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="16dp"            android:fontFamily="@font/poppins"            android:text="Username"            android:textColor="@color/black"            android:textSize="16sp"            android:textStyle="bold"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/ivAvatarUser"            app:layout_constraintTop_toTopOf="@+id/ivAvatarUser" />        <TextView            android:id="@+id/tvCreated"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:fontFamily="@font/poppins"            android:text="22-12-2022"            android:textSize="10sp"            app:layout_constraintStart_toStartOf="@+id/tvUsernameComment"            app:layout_constraintTop_toBottomOf="@+id/tvUsernameComment" />        <TextView            android:id="@+id/tvComment"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginEnd="8dp"            android:fontFamily="@font/poppins"            android:text="Komentar"            android:textColor="@color/black"            android:textSize="12sp"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="@+id/tvUsernameComment"            app:layout_constraintTop_toBottomOf="@+id/tvCreated" />    </androidx.constraintlayout.widget.ConstraintLayout></androidx.cardview.widget.CardView>